<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5sp">

    <TextView
        android:id="@+id/tv_areaC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inserisci le coordinate geografiche e il numero di città da controllare, più vicine al punto scelto"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_areaC_lat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_areaC"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:hint="Latitudine"
        android:inputType="numberSigned" />

    <EditText
        android:id="@+id/et_areaC_lon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_areaC_lat"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:hint="Longitudine"
        android:inputType="numberSigned" />

    <EditText
        android:id="@+id/et_areaC_cities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_areaC_lon"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:hint="Numero di città più vicine da cercare(Massimo 50)"
        android:inputType="numberDecimal"
        android:textSize="14sp" />

    <Button
        android:id="@+id/bt_areaC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_areaC_cities"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="4dp"
        android:text="CERCA" />

    <ListView
        android:id="@+id/lv_areaC"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bt_areaC"
        android:layout_marginTop="4dp" />
</RelativeLayout>